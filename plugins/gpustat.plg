    DISPFAN="1"
    DISPPWRDRAW="1"
    DISPPWRSTATE="1"
    DISPTHROTTLE="1"
    DISPSESSIONS="1"
    UIREFRESH="1"
    UIREFRESHINT="2000"
    DISPMEMUTIL="1"
    DISP3DRENDER="1"
    DISPBLITTER="1"
    DISPVIDEO="1"
    DISPVIDENH="1"
    DISPINTERRUPT="1"
    DISPEVENT="1"
    DISPVERTEX="1"
    DISPTEXTURE="1"
    DISPSHADEREXP="1"
    DISPSEQUENCER="1"
    DISPSHADERINTER="1"
    DISPSCANCON="1"
    DISPPRIMASSEM="1"
    DISPDEPTHBLK="1"
